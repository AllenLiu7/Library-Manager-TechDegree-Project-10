doctype html
html
  head
    title #{books.title}
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 Update Book
    -let id= books.id;
    form(method='post',action="/books/"+ id +"?_method=PUT") 
      p
        label(for='title') Title
        input#title(name='_method', type='text', value=books.title)
      p
        label(for='author') Author
        input#author(name='_method', type='text', value=books.author)
      p
        label(for='genre') Genre
        input#genre(name='_method', type='text', value=books.genre)
      p
        label(for='year') Year
        input#year(name='_method', type='text', value=books.year)
      p
        input(type='submit', value='Update Book')
    form(method='post', action='/books/8/delete', onsubmit="return confirm('Do you really want to delete this book?');")
      p
        a.button(href='all_books.html') Cancel
      p
        input(type='submit', value='Delete Book')